<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tommy"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/team_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin138dp"
        android:layout_marginLeft="@dimen/margin138dp"
        android:layout_marginEnd="@dimen/margin138dp"
        android:layout_marginRight="@dimen/margin138dp"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/margin8dp"
        android:text="@string/team_a"
        android:textColor="@color/teamNameColor"
        android:textSize="@dimen/teamName_size"
        app:layout_constraintEnd_toStartOf="@+id/center_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_a_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/score"
        android:textColor="@color/scoreColor"
        android:textSize="@dimen/scoreSize"
        app:layout_constraintEnd_toStartOf="@+id/center_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/team_a" />

    <Button
        android:id="@+id/three_points_a"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin24dp"
        android:layout_marginTop="@dimen/margin24dp"
        android:layout_marginRight="@dimen/margin24dp"
        android:background="@color/btns_color"
        android:onClick="threePointsTeamA"
        android:text="@string/_3_points"
        android:textColor="@color/text_btn_color"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintEnd_toStartOf="@+id/center_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/team_a_score" />

    <Button
        android:id="@+id/two_points_a"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin24dp"
        android:layout_marginTop="@dimen/margin8dp"
        android:layout_marginRight="@dimen/margin24dp"
        android:background="@color/btns_color"
        android:onClick="twoPointsTeamA"
        android:text="@string/_2_points"
        android:textColor="@color/text_btn_color"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintEnd_toStartOf="@+id/center_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/three_points_a" />

    <Button
        android:id="@+id/one_point_a"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin24dp"
        android:layout_marginTop="@dimen/margin8dp"
        android:layout_marginRight="@dimen/margin24dp"
        android:background="@color/btns_color"
        android:onClick="onePointTeamA"
        android:text="@string/free_throw"
        android:textColor="@color/text_btn_color"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintEnd_toStartOf="@+id/center_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/two_points_a" />

    <View
        android:id="@+id/center_line"
        android:layout_width="1dp"
        android:layout_height="325dp"
        android:background="@color/btns_color"
        app:layout_constraintEnd_toStartOf="@id/two_points_b"
        app:layout_constraintStart_toEndOf="@id/two_points_a"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin16dp"
        android:fontFamily="sans-serif-medium"
        android:padding="@dimen/margin8dp"
        android:text="@string/team_b"
        android:textColor="@color/teamNameColor"
        android:textSize="@dimen/teamName_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/center_line"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_b_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin16dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/score"
        android:textColor="@color/scoreColor"
        android:textSize="@dimen/scoreSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/center_line"
        app:layout_constraintTop_toBottomOf="@id/team_b" />

    <Button
        android:id="@+id/three_points_b"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin24dp"
        android:layout_marginTop="@dimen/margin24dp"
        android:layout_marginRight="@dimen/margin24dp"
        android:background="@color/btns_color"
        android:onClick="threePointsTeamB"
        android:text="@string/_3_points"
        android:textColor="@color/text_btn_color"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/center_line"
        app:layout_constraintTop_toBottomOf="@id/team_b_score" />

    <Button
        android:id="@+id/two_points_b"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin24dp"
        android:layout_marginTop="@dimen/margin8dp"
        android:layout_marginRight="@dimen/margin24dp"
        android:background="@color/btns_color"
        android:onClick="twoPointsTeamB"
        android:text="@string/_2_points"
        android:textColor="@color/text_btn_color"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/center_line"
        app:layout_constraintTop_toBottomOf="@id/three_points_b" />

    <Button
        android:id="@+id/one_point_b"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin24dp"
        android:layout_marginTop="@dimen/margin8dp"
        android:layout_marginRight="@dimen/margin24dp"
        android:background="@color/btns_color"
        android:onClick="onePointTeamB"
        android:text="@string/free_throw"
        android:textColor="@color/text_btn_color"
        android:textSize="@dimen/btn_textSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/center_line"
        app:layout_constraintTop_toBottomOf="@id/two_points_b" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/reset_btn_color"
        android:onClick="resetGame"
        android:text="@string/reset"
        android:textColor="@color/text_btn_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>